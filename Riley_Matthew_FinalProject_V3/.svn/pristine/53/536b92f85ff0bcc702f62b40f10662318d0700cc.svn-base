package riley_matthew_finalproject_v3;

import java.awt.Rectangle;
import java.awt.Shape;
import java.awt.image.BufferedImage;
import java.io.IOException;
import java.net.URL;
import javax.imageio.ImageIO;

/**
 *
 * @author matthewriley
 */
public class Alien {

    //The alien image
    private BufferedImage img;

    //The alien body zone (for collisions)
    final Rectangle bodyZone;

    //The alien's coordinates
    int posX, posY;

    //Boolean to track if the alien should be displayed or not
    private boolean active;

    //The index of the alien's spawn location in the spawnLocations arraylist (in the GamePanels class)
    private final int spawnLocIndex;

    //Alien constructor
    public Alien(SpawnLocation spawnLoc, int _spawnLocIndex) throws IOException {

        //Create the image
        URL imgURL = getClass().getResource(Const.ALIEN_URL);
        img = ImageIO.read(imgURL);

        //Create the bounding body
        bodyZone = new Rectangle(
                spawnLoc.getX() - img.getWidth() / 2,
                spawnLoc.getY() - img.getHeight() / 2,
                img.getWidth(),
                img.getHeight()
        );

        //Set the position
        posX = spawnLoc.getX();
        posY = spawnLoc.getY();

        //Save the index of the spawn location in the spawnLocations arrayList
        spawnLocIndex = _spawnLocIndex;

        //Set the alien to active
        active = true;
    }

    //Accessors
    public Shape getBodyZone() {
        return bodyZone;
    }

    public BufferedImage getImage() {
        return img;
    }

    public int getX() {
        return posX;
    }

    public int getY() {
        return posY;
    }

    public int getSpawnLocIndex() {
        return spawnLocIndex;
    }

    public boolean isActive() {
        return active;
    }

    //Methods
    public void rescue() {
        //The alien is rescued, so deactivate it
        active = false;
    }
}
